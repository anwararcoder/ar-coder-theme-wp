			<div class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
				{% block content %}
					<h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
					
					<p>{{post.preview}}</p>
					
					{% if post.get_thumbnail %}
						<img loading="lazy" src="{{post.thumbnail.src}}" alt="Image"/>
					{% endif %}
				{% endblock %}
			</div>
